@page
@model StockAPI_Razor.Pages.BrokerCompany.NewBrokerAdminModel
@{
    ViewBag.Title = "New Broker Page";
}
<h1>This is for creating a new broker admin account!</h1>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<div class="col-md-6">
    <form method="post">
        <div asp-asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="NewBroker.FirstName">First Name:</label>
            <input asp-for="NewBroker.FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NewBroker.LastName">Last Name:</label>
            <input asp-for="NewBroker.LastName" class="form-control" />
            <span asp-validation-for="NewBroker.LastName" class="text-warning"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewBroker.Password">Password:</label>
            <input asp-for="NewBroker.Password" type="password" class="form-control" />
            <span asp-validation-for="NewBroker.Password" class="text-warning"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewBroker.ConfirmPassword">Confirm Password:</label>
            <input asp-for="NewBroker.ConfirmPassword" type="password" class="form-control" />
            <span asp-validation-for="NewBroker.Password" class="text-warning"></span>
            <br />
        </div>
        <div class="form-group">
            <label asp-for="NewBroker.Email">Email</label>
            <input asp-for="NewBroker.Email" class="form-control" />
            <span asp-validation-for="NewBroker.Email" class="text-warning"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create Broker Account" class="btn btn-primary" />
            <div class="text-success">@ViewBag.UserMessage</div>
        </div>
    </form>
</div>
