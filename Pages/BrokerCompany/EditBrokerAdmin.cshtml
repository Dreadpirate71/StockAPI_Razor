@page
@model StockAPI_Razor.Pages.BrokerCompany.EditBrokerAdminModel

@{
    ViewBag.Title = "Edit Broker Page";
}
<h1>This is for editing a broker admin account!</h1>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<div class="col-md-6">
    <form method="post">
        <div asp-asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="EditBroker.FirstName">First Name:</label>
            <input asp-for="EditBroker.FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="EditBroker.LastName">Last Name:</label>
            <input asp-for="EditBroker.LastName" class="form-control" />
            <span asp-validation-for="EditBroker.LastName" class="text-warning"></span>
        </div>
        <div class="form-group">
            <label asp-for="EditBroker.Password">Password:</label>
            <input asp-for="EditBroker.Password" type="password" class="form-control" />
            <span asp-validation-for="EditBroker.Password" class="text-warning"></span>
        </div>
        <div class="form-group">
            <label asp-for="EditBroker.Password">Confirm Password:</label>
            <input asp-for="EditBroker.Password" type="password" class="form-control" />
            <span asp-validation-for="EditBroker.Password" class="text-warning"></span>
            <br />
        </div>
        <div class="form-group">
            <label asp-for="EditBroker.Email">Email</label>
            <input asp-for="EditBroker.Email" class="form-control" />
            <span asp-validation-for="EditBroker.Email" class="text-warning"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Edit Broker Account" class="btn btn-primary" />
            <div class="text-success">@ViewBag.UserMessage</div>
        </div>
    </form>
    <br />
</div>